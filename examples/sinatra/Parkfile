require 'parklife'
require 'sinatra'

get '/' do
  '<a href="/hello/foo">foo</foo>, <a href="/hello/bar">bar</foo>, <a href="/hello/baz">baz</foo>'
end

get '/hello/:name' do
  "Hello #{params[:name]}"
end

Parklife.application.configure do |config|
  config.rack_app = Sinatra::Application
end

Parklife.application.routes do
  root crawl: true

  get '/hello/other'
end
