require 'parklife'
require 'sinatra'

get '/' do
  'root'
end

get '/hello/:name' do
  "Hello #{params[:name]}"
end

Parklife.application.configure do |config|
  config.build_dir = 'build'
  config.rack_app = Sinatra::Application
end

Parklife.application.routes do
  root

  %w(foo bar baz).each do |name|
    get "/hello/#{name}"
  end
end
