require 'parklife'
require 'rack'

app = Proc.new { |env|
  request = Rack::Request.new(env)

  [
    200,
    { 'Content-Type' => 'text/html' },
    ["Served from #{request.path}"]
  ]
}

Parklife.application.configure do |config|
  config.build_dir = 'build'
  config.rack_app = app
end

Parklife.application.routes do
  root
  get 'foo'
  get 'bar'
end
